server {
    listen 8080;                          # Port to listen on
    server_name localhost example.com;    # Server names
    
    root /var/www/html;                   # Root directory for files
    index index.php index.htm;           # Default index files
    
    client_max_body_size 10M;            # Max upload size

    error_page 404 /404.html;            # Custom error pages
    error_page 500 502 503 504 /50x.html;
    
    location / {                          # Route configuration
        allow_methods GET POST;           # Allowed HTTP methods
        autoindex off;                    # Directory listing
    }
    
    location /uploads {
        allow_methods GET POST DELETE;
        root /var/www/uploads;
        autoindex on;
    }
    
    location /cgi-bin {
        allow_methods GET POST;
        cgi_pass .py /usr/bin/python3;   # CGI configuration
        cgi_pass .php /usr/bin/php-cgi;
    }
}

server {
    listen 8081;
    server_name another.com;
    root /var/www/another;
    
    location / {
        allow_methods GET;
    }
}
